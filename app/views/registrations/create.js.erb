<% if resource.new_record? %>
  $('#sign-up-form').replaceWith("<%= j  render 'form', remote: true %>");
<% else %>
  $('#flash-alerts').html("<%= j flash_alert("Signed up successfully.") %>");
  $('#sign-up').modal('hide');
  setTimeout(function(){
    $('header').replaceWith("<%= j render 'layouts/header' %>");
  },400);
  $('body').prepend("<%= j render('places/modal_form', place: Place.new)%>");
  $('button#add-new-place').data('new-place-form', true)
<% end %>
